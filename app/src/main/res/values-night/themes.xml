<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Github" parent="Theme.MaterialComponents.DayNight">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/yellow_500</item>
    <item name="colorPrimaryVariant">@color/yellow_200</item>
    <item name="colorOnPrimary">@color/black</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/black</item>
    <item name="colorSecondaryVariant">@color/gray_500</item>
    <item name="colorOnSecondary">@color/white</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    <item name="android:windowLightStatusBar">true</item>

    <!-- Customize your theme here. -->
    <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary.TextWhite</item>
    <item name="titleTextColor">@color/black</item>
    <item name="colorAccent">@color/yellow_500</item>
  </style>

  <style name="Widget.MaterialComponents.ActionBar.Primary.TextWhite" parent="Widget.MaterialComponents.ActionBar.Primary">
    <item name="android:textColor">@color/black</item>
    <item name="titleTextColor">@color/black</item>
    <item name="colorOnPrimary">@color/black</item>
    <item name="android:colorForeground">@color/black</item>
  </style>

  <style name="Theme.Github.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>
</resources>